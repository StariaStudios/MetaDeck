{% extends 'base.html.twig' %}

{% block title %}{{ deck.deckType.name }} Deck{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="mb-4">{{ deck.deckType.name }} Deck</h1>

        {% if deck.player %}
            <p><strong>Player:</strong> {{ deck.player }}</p>
        {% endif %}

        <hr>

        <h2>Pok√©mon üêæ</h2>
        <div class="row row-cols-1 row-cols-md-2 g-3 mb-4">
            {% set hasPokemon = false %}
            {% for dc in deck.deckCards %}
                {% if dc.card and (dc.card.category == 'Pok√©mon' or dc.card.category == 'Pokemon') %}
                    {% set hasPokemon = true %}
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body d-flex justify-content-between align-items-center">
                                <span>{{ dc.card.name }} ({{ dc.card.setCode }} {{ dc.card.number }})</span>
                                <span class="badge bg-primary fs-6">{{ dc.quantity }}</span>
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
            {% if not hasPokemon %}
                <p><em>No Pok√©mon in this deck.</em></p>
            {% endif %}
        </div>

        <h2>Trainers üé¥</h2>
        <div class="row row-cols-1 row-cols-md-2 g-3 mb-4">
            {% set hasTrainer = false %}
            {% for dc in deck.deckCards %}
                {% if dc.card and dc.card.category == 'Trainer' %}
                    {% set hasTrainer = true %}
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body d-flex justify-content-between align-items-center">
                                <span>{{ dc.card.name }} ({{ dc.card.setCode }} {{ dc.card.number }})</span>
                                <span class="badge bg-success fs-6">{{ dc.quantity }}</span>
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
            {% if not hasTrainer %}
                <p><em>No Trainers in this deck.</em></p>
            {% endif %}
        </div>

        <h2>Energies ‚ö°</h2>
        <div class="row row-cols-1 row-cols-md-2 g-3 mb-4">
            {% set hasEnergy = false %}
            {% for dc in deck.deckCards %}
                {% if dc.card and dc.card.category == 'Energy' %}
                    {% set hasEnergy = true %}
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body d-flex justify-content-between align-items-center">
                                <span>{{ dc.card.name }} ({{ dc.card.setCode }} {{ dc.card.number }})</span>
                                <span class="badge bg-warning text-dark fs-6">{{ dc.quantity }}</span>
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
            {% if not hasEnergy %}
                <p><em>No Energy in this deck.</em></p>
            {% endif %}
        </div>
    </div>
{% endblock %}
